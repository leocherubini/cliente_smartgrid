<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente SmartGrid"
        android:id="@+id/texto01" />
    
    <!-- ARQUIVO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione um arquivo:"
        android:id="@+id/texto02"
        android:layout_below="@+id/texto01"
        android:paddingTop="10dp" />
    
    <!-- Arquivo selecionado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum arquivo selecionado."
        android:id="@+id/texto03"
        android:layout_below="@+id/texto02"
        android:textColor="#9f0000" />
    
    <!-- Botao de pesquisa do arquivo -->
    <Button
        android:id="@+id/botao_arquivo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
 		android:layout_below="@+id/texto03"
        android:text="Pesquisar arquivo" />
    
    <!-- SERVIVIDOR -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione um servidor"
        android:id="@+id/texto04"
        android:layout_below="@+id/botao_arquivo"
        android:paddingTop="20dp" />
    
    <!-- Nome do servidor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servidor: "
        android:id="@+id/texto05"
        android:layout_below="@+id/texto04" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum servidor selecionado"
        android:id="@+id/texto06"
        android:layout_below="@+id/texto04"
        android:layout_toRightOf="@+id/texto05"
        android:textColor="#9f0000" />
    
    <!-- Endereco mac do servidor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mac: "
        android:id="@+id/texto07"
        android:layout_below="@+id/texto05" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum endereco selecionado"
        android:id="@+id/texto08"
        android:layout_below="@+id/texto06"
        android:layout_toRightOf="@+id/texto07"
        android:textColor="#9f0000" />

    <!-- Botao de pesquisa do servidor -->
    <Button
        android:id="@+id/botao_servidor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/texto07"
        android:text="Pesquisar servidor" />
    
    <!-- ENVIAR ARQUIVO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar arquivo: "
        android:id="@+id/texto09"
        android:layout_below="@+id/botao_servidor"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto10"
        android:layout_below="@+id/botao_servidor"
        android:layout_toRightOf="@+id/texto09"
        android:textColor="#009f00" 
        android:paddingTop="20dp" />
    
    <!-- Botao de envio de arquivo -->
    <Button
        android:id="@+id/botao_enviar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/texto10"
        android:text="Enviar arquivo" />
    
</RelativeLayout>